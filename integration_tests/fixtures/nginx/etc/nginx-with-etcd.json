{
  "etcd":{
      "endpoints": "http://etcd:4001",
      "prefix": "/containerbuddy"
  },
  "services": [
    {
      "name": "nginx",
      "port": 80,
      "interfaces": ["eth0"],
      "health": "/usr/bin/curl --fail -s -o /dev/null http://localhost/health.txt",
      "poll": 1,
      "ttl": 5
    }
  ],
  "backends": [
    {
      "name": "app",
      "poll": 1,
      "onChange": [ "confd", "-onetime", "-backend", "etcd", "-node", "http://etcd:4001"]
    }
  ]
}
